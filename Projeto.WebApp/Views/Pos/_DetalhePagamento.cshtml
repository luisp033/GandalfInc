@model PagamentoViewModel

<div asp-validation-summary="All" class="text-danger"></div>  
<input type="hidden" asp-for="Pago" />
<input type="hidden" asp-for="Tipo" />
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="NumeroContribuinte" class="control-label"></label>
    <input asp-for="NumeroContribuinte" class="form-control" />
    <span asp-validation-for="NumeroContribuinte" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Telefone" class="control-label"></label>
    <input asp-for="Telefone" class="form-control" />
    <span asp-validation-for="Telefone" class="text-danger"></span>
</div>