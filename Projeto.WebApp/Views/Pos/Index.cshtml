@{
    Layout = "_LayoutPos";
}



<header class="container-fluid header">
    <div class="row">
        <div class="col-md-8 col-sm-12">
            @(await Component.InvokeAsync("Estado"))
        </div>
        <div class="col-md-4 col-sm-12 d-flex flex-row-reverse">
            <button type="button" class="btn btn-sm btn-primary m-1"  id="pos-fechar">FECHAR</button>
        </div>
    </div>
</header>

<div class="container-fluid text-center">
    <div class="row content">


        @*Categorias*@
        <div class="col-md-2 sidenav">
            @(await Component.InvokeAsync("Categorias"))
        </div>

        @*Produtos*@
        @*<div class="col-md-8" style="background-color: #6c6868;">*@
            <div class="col-md-8" style="background-image: Url('img/bg.jpg');background-size: cover;">
            <div id="produtosDiv">
                @(await Component.InvokeAsync("Produtos"))
            </div>
        </div>

        @*Carrinho*@
        <div class="col-md-2 sidenav">
            <div id="totaisDiv">
                @(await Component.InvokeAsync("Totais"))
            </div>
            <hr />
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-sm btn-secondary" id="pos-cancelar">CANCELAR</button>
                <button type="button" class="btn-block ml-2 btn btn-sm btn-success " id="pos-pagar">PAGAR</button>
            </div>

            <hr />
            <div id="carrinhoDiv">
                @(await Component.InvokeAsync("Carrinho"))
            </div>


        </div>
    </div>
</div>
@*        <div class="col-2 d-flex flex-row-reverse">

    </div>*@
<footer class="container-fluid text-center footer">
    <div id="mensagemDiv">
        @(await Component.InvokeAsync("MensagemPos"))
    </div>

</footer>

<partial name="_ModalFecho" />
<partial name="_ModalPagamento" />
<partial name="_ModalCancelar" />




