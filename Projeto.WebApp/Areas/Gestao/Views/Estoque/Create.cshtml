
@{
    ViewData["Title"] = "Inserção de Estoque";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label for="Produto" class="control-label">Produto</label>
                <select name="ProdutoId" asp-items="@ViewBag.VBProdutos" class="form-control">
                </select>
            </div>

            <div class="form-group">
                <label  for="Quantidade" class="control-label">Quantidade</label>
                <input  type="number"  min="0" name="Quantidade" class="form-control" />
            </div>


            <div class="form-group">
                <a asp-action="Index" class="btn btn-light">Voltar</a>
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
