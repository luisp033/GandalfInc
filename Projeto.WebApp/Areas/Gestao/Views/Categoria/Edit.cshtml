@model Projeto.DataAccessLayer.Entidades.CategoriaProduto

@{
    ViewData["Title"] = (Model.Identificador == Guid.Empty ? "Inserção" : "Edição") + " de categoria produto";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">

            <input type="hidden" asp-for="Identificador" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdemApresentacao" class="control-label"></label>
                <input asp-for="OrdemApresentacao" class="form-control" />
                <span asp-validation-for="OrdemApresentacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageData" class="control-label"></label>
                <input type="file" id="ImageData" name="ImageData"  class="form-control"/>
            </div>
            <img src="@ViewBag.ImageDataUrl" />
            @if (Model.Identificador != Guid.Empty)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="DataCriacao" class="control-label"></label>
                    <input asp-for="DataCriacao" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="DataUltimaAlteracao" class="control-label"></label>
                    <input asp-for="DataUltimaAlteracao" class="form-control" readonly />
                </div>
            }
            <div class="form-group">
                <a asp-action="Index" class="btn btn-light">Voltar</a>
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
